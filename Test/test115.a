; a simple numeric test
; - these should give equivalent results (if given the same argument)

        .macro  test1a, ?fa
        .word   ?fa
        .endm

        .macro  test1b, ?fa
]fa     .equ    ?fa
        .word   ]fa
        .endm

        .macro  test1c, ?fa
@fa     .equ    ?fa
        .word   @fa
        .endm

        .macro  test1d, ]fa
        .word   ]fa
        .endm

        .macro  test1e, @fa
        .word   @fa
        .endm

; try them

        test1a  $20
        test1b  $20
        test1c  $20
        test1d  $20
        test1e  $20

; try them with different arguments

        test1a  $10
        test1b  $20
        test1c  $30
        test1d  $40
        test1e  $50

