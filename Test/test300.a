; no errors to detect

        .listfile
        .errfile

; -------------------------------

        .cpu    "T_16_L"    ; required psop
;        .org    $1000       ; can't use outside of explicit segment

; -------------------------------

; first explicit segment *must* be absolute

        .segment	abs1

        .org    $7fff       ; ORG before any data makes segment absolute

        .byte   $00

        .endsegment	abs1

; another segment

        .segment	abs2

beg2    .org    $bfff       ; absolute (also checking label value assignment)

        .byte   $00

        .ends               ; alias for ENDSEGMENT

; another segment

        .segment	rel2_1

        .byte   $01         ; relative

        .ends	REL2_1

; another segment - note names can be string expressions

        .segment    "abs3"

        .org    $ffff-2     ; absolute

        .byte   $00

        .ends

; another segment

]NAME$  =   "rel3_1"

        .segment    ]NAME$

        .byte   $01         ; relative

        .ends

; another segment

]NAME$  =   "rel3_2"

        .segment    ]name$

        .byte   $02         ; relative

        .ends       ]Name$

; an empty segment at top of memory

        .segment    rel3_3

        .ends

; -------------------------------

        .end
