; an explicit segment

        .segment	abs1

        .org    $fffffffe   ; first segment must be absolute

        .byte   $00         ; byte at $ffff:fffe, pc -> $ffff:ffff

        .ends

; segment relative to previous

        .segment	rel1

        .byte   $00         ; byte at $ffff:ffff, pc -> $1:0000:0000 (ok)

        .ends

; segment relative to previous

        .segment	rel2

        .ends

; segment relative to previous

        .segment	rel3

        .byte   $03         ; pc = $1:0000:0000 (fail)

        .ends

