; define null-terminated string (a C-style string)

        .macro  STRZ, ?text
        .str    ?text
        .byte   0
        .endm

; define string with preceeding length byte (a Pascal-style string)

        .macro  PSTR, ?text
        .byte   @end - @beg
@beg    .str    ?text
@end    .endm

